#:kivy 1.11.1
#:import basename os.path.basename

<Button>:
    font_size: 30
    halign: 'center'
    padding_y: 30
    size_hint: None, None
    strip: True
    width: 250


<Label>:
    font_size: 30
    halign: 'center'
    height: self.texture_size[1]
    line_height: 1
    size_hint_y: None
    strip: True
    text_size: self.width - 16, None
    valign: 'middle'


<TextInput>:
    font_size: 30
    height: self.minimum_height
    padding: 20, 20


<ErrorPopup>:
    size_hint: 0.8, 0.5
    title: root.title
    title_size: 30

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            Label:
                halign: 'left'
                text: root.message

        AnchorLayout:
            Button:
                text: 'ok'
                on_release: root.dismiss()


<HomeScreen>:
    name: 'home_screen'

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            Label:
                font_size: 50
                halign: 'center'
                text: 'Wormhole'

        AnchorLayout:
            Button:
                text: 'send'
                on_release: root.manager.current = 'send_screen'

        AnchorLayout:
            Button:
                text: 'receive'
                on_release: root.manager.current = 'receive_screen'


<SendScreen>:
    name: 'send_screen'

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None

                Label:
                    text: 'your code is' if root.has_code else 'generating code'

                Label:
                    font_size: 50
                    padding_y: 10
                    text: root.code

                Label:
                    font_size: 20
                    text: '(copied in your clipboard)' if root.has_code else ''

        BoxLayout:
            orientation: 'vertical'

            AnchorLayout:
                Button:
                    text: 'choose file'
                    on_release: root.open_file_chooser()

            AnchorLayout:
                BoxLayout:
                    padding_x: 50
                    size_hint_y: None

                    Label:
                        text: 'file name: {}'.format(basename(root.path) if root.path else '-')

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                Button:
                    text: 'cancel'
                    on_release: root.manager.current = 'home_screen'

            AnchorLayout:
                Button:
                    disabled: root.send_button_disabled
                    text: root.send_button_text
                    on_release: root.send()


<ReceiveScreen>:
    name: 'receive_screen'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'

            AnchorLayout:
                TextInput:
                    id: code_input
                    multiline: False
                    size_hint: 0.8, None

            AnchorLayout:
                Button:
                    disabled: root.connect_button_disabled
                    text: root.connect_button_text
                    on_release: root.open_wormhole()

        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None

                Label:
                    text: 'file name: {}'.format(root.file_name)

                Label:
                    text: 'file size: {}'.format(root.file_size)

        BoxLayout:
            orientation: 'horizontal'

            AnchorLayout:
                Button:
                    text: 'cancel'
                    on_release: root.manager.current = 'home_screen'

            AnchorLayout:
                Button:
                    disabled: root.accept_button_disabled
                    text: root.accept_button_text
                    on_release: root.accept_button_func()
